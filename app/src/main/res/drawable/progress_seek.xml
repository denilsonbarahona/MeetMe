<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:height="3dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" />
        </shape>
    </item>

    <item android:id="@android:id/progress" android:height="3.5dp" android:gravity="center"  >

        <clip>
            <shape android:shape="rectangle" >
                <solid android:color="#44a1f2" />
                <stroke android:width="3dp" android:color="#44a1f2" />
            </shape>
        </clip>
    </item>

</layer-list>